<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="10">

        <ImageView
            android:id="@+id/img_hinh_gio_hang"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="7"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_ten_sp_gio_hang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="Iphone 14 ProMax"
                android:textColor="#505050"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_don_gia_sp_gio_hang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Ä‘0"
                android:textColor="#E67008"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/but_minus"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:text="-"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/but_value"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:focusable="false"
                    android:text="1"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/but_plus"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:text="+"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/but_delete_gio_hang"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="60dp"
                    android:layout_marginBottom="8dp"
                    android:background="@null"
                    android:focusable="false"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_delete" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>