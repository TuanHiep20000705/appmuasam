<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    android:padding="4dp">

    <TextView
        android:id="@+id/txt_ngay_mua_lich_su"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="2022/11/12"
        android:textColor="#505050"
        android:textSize="16sp"
        android:textStyle="italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="10">

        <ImageView
            android:id="@+id/img_hinh_lich_su"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="7">

            <TextView
                android:id="@+id/txt_ten_sp_lich_su"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:ellipsize="end"
                android:lines="1"
                android:text="iPhone 14 64Gb"
                android:textColor="#505050"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_so_luong_lich_su"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_ten_sp_lich_su"
                android:layout_alignParentRight="true"
                android:text="x1"
                android:textColor="#91918D"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_don_gia_lich_su"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_so_luong_lich_su"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:text="đ1,000,000"
                android:textColor="#E67008"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_thanh_tien_lich_su"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_don_gia_lich_su"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="5dp"
                android:layout_toLeftOf="@id/txt_tong_tien_lich_su"
                android:text="@string/txt_tongthanhtien"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_tong_tien_lich_su"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_don_gia_lich_su"
                android:layout_alignParentRight="true"
                android:layout_marginTop="22dp"
                android:text="đ1,050,000"
                android:textColor="#E67008"
                android:textSize="16sp" />

            <Button
                android:id="@+id/but_mua_lai_lich_su"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_tong_tien_lich_su"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_but_mua"
                android:text="@string/but_mualai"
                android:textColor="#fff" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>