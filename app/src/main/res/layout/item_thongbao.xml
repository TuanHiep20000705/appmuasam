<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/txt_date_thong_bao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12/11/2022  16:50"
        android:textColor="#505050"
        android:textSize="14sp"
        android:textStyle="italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_hinh_thong_bao"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_shoppingbag" />

        <TextView
            android:id="@+id/txt_noi_dung_thong_bao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Sản phẩm đã được thêm vào giỏ."
            android:textColor="#505050"
            android:textSize="16sp" />
    </LinearLayout>


</LinearLayout>